{
  "name": "@seedcompany/eslint-plugin",
  "version": "1.0.0",
  "description": "Seed Company's ESLint config / rules",
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslintplugin",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seedcompany/eslint-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/seedcompany/eslint-plugin/issues"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc -b tsconfig.build.json",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/experimental-utils": "^4.1.0",
    "@typescript-eslint/parser": "^3.10.1",
    "confusing-browser-globals": "^1.0.9",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0"
  },
  "peerDependencies": {
    "eslint": "^7.0.0",
    "prettier": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/prompt-cli": "^9.1.2",
    "@seedcompany/eslint-plugin": "*",
    "@types/eslint": "^7.2.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/types": "^3.10.1",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-circus": "^26.4.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "type-fest": "^0.16.0",
    "typescript": "^4.0.2"
  },
  "resolutions": {
    "@seedcompany/eslint-plugin": "portal:."
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner"
  },
  "publishConfig": {
    "access": "public"
  }
}
